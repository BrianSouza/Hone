<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hone.View.PedCabecalhoView">
  <StackLayout>
    <Button Text="Próximo" Command="{Binding IrParaLinhas}"></Button>
    <Label Text="Parceiro"></Label>
    <Picker x:Name="pckParceiros" SelectedIndex="{Binding ParceiroIndex}" ></Picker>
    <Label Text="Data de Entrega"></Label>
    <DatePicker Format="dd/MM/yyyy" Date="{Binding DtEntrega}" ></DatePicker>
  </StackLayout>
</ContentPage>